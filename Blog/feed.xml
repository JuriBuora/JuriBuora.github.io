---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-US">
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/Blog/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/feed.xml</id>
  <title>{{ site.title | xml_escape }} - Blog</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <author>
    <name>{{ site.author | xml_escape }}</name>
    <email>{{ site.email | xml_escape }}</email>
  </author>
  
  {% for post in site.posts %}
    {% if post.categories contains 'blog' %}
    <entry>
      <title>{{ post.title | xml_escape }}</title>
      <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
      <id>{{ site.url }}{{ site.baseurl }}{{ post.url }}</id>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <summary type="html">{{ post.excerpt | strip_html | xml_escape }}</summary>
      <content type="html">{{ post.content | strip_html | xml_escape | truncate: 5000 }}</content>
    </entry>
    {% endif %}
  {% endfor %}
</feed>
